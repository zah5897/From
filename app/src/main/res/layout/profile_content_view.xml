<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ad_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"></LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/publish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/view_selector"
        android:drawableLeft="@mipmap/publish_icon"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="我的发布" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/view_selector"
        android:drawableLeft="@mipmap/store_icon"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="我的收藏" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/view_selector"
        android:drawableLeft="@mipmap/commonent_icon"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="我的评论" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/view_selector"
        android:drawableLeft="@mipmap/verion_icon"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="关于" />


    <TextView
        android:id="@+id/exit_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/red_button_bg_selector"
        android:gravity="center"
        android:padding="10dp"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>